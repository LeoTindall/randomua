{
    "manifest_version": 2,
    "name": "RandomUA",
    "short_name": "RandomUA",
    "author": "Leo Tindall",
    "version": "0.2.0",

    "developer": {
        "name": "Leo Tindall",
        "url": "https://leotindall.com/randomua/"
    },

    "description": "Switches the user agent of the browser randomly for each new request.",

    "icons": {
        "48": "icons/randomua-48.png",
        "96": "icons/randomua-96.png"
    },

    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],

    "options_ui": {
        "page": "pages/prefs.html",
        "browser_style": true
    },

    "background": {
            "scripts": ["background/random-ua.js"]
    },

    "applications": {
        "gecko": {
          "id": "randomua@leotindall.com"
        }
      }
}